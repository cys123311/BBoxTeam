<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/dp_20"
    android:layout_marginRight="@dimen/dp_20"
    android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@mipmap/activity_title" />

    <ImageView
        android:layout_width="@dimen/dp_300"
        android:layout_height="@dimen/dp_150"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@mipmap/activity_music" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dd_activity_newActivity1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="最新活动"
            android:textSize="@dimen/sp_20"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/dd_activity_more1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/dp_150"
            android:text="查看更多"
            android:textColor="#9E9A9A"
            android:textSize="@dimen/dp_20" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/dd_activity_huodong1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_180"
        android:background="@mipmap/activity_huodong" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dd_activity_newActivity2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="最新活动"
            android:textSize="@dimen/sp_20"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/dd_activity_more2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/dp_150"
            android:text="查看更多"
            android:textColor="#9E9A9A"
            android:textSize="@dimen/dp_20" />
    </RelativeLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_180"
        android:id="@+id/dd_activity_recy"/>
</LinearLayout>