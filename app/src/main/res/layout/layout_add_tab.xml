<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/dp_80"
    android:background="@color/colorOrange">

    <TextView
        android:id="@+id/tv_tab_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="小提琴"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_20" />

    <TextView
        android:id="@+id/tv_line"
        android:layout_width="@dimen/sp_1"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/tv_tab_title"
        android:background="@color/gray_word" />

    <ImageView
        android:id="@+id/iv_triangle"
        android:visibility="gone"
        android:background="@mipmap/ic_triangle"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_centerInParent="true"
        android:layout_below="@id/tv_tab_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>