<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/fragment_horizontal_margin"
    android:paddingRight="@dimen/fragment_horizontal_margin"
    android:background="#FFFFFF"
    tools:context=".wsqboss.home.homefragment.ui.login.HomeFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginBottom="@dimen/dp_20"
                    android:layout_width="@dimen/dp_100"
                    android:layout_height="@dimen/dp_50"
                    android:id="@+id/image"
                    app:layout_constraintTop_toTopOf="parent"
                    android:src="@mipmap/jifeng"/>

                <ImageView
                    android:id="@+id/images"
                    android:scaleType="centerCrop"
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:layout_marginTop="8dp"
                    android:src="@mipmap/tishi"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <ImageView
                android:id="@+id/img_events"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_150"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/dp_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@mipmap/jifeng_train1"
                    android:layout_weight="1"
                    android:id="@+id/img_train"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_80"/>
                <ImageView
                    android:src="@mipmap/jifeng_common"
                    android:layout_weight="1"
                    android:id="@+id/img_common"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_80"/>
            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_5"
                android:id="@+id/img_train1"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginBottom="@dimen/dp_20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="讲师介绍"
                    android:textSize="@dimen/dp_20"
                    app:layout_constraintTop_toTopOf="parent"
                    />

                <TextView
                    android:scaleType="centerCrop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="查看更多"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_10"
                android:id="@+id/rv_introduce"/>
            <TextView
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginBottom="@dimen/dp_20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="直播课程"
                android:textSize="@dimen/dp_20"
                app:layout_constraintTop_toTopOf="parent"
                android:src="@mipmap/jifeng"/>
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_10"
                android:id="@+id/rv_live"/>
            <TextView
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="免费课程"
                android:textSize="@dimen/dp_20"
                app:layout_constraintTop_toTopOf="parent"
                android:src="@mipmap/jifeng"/>
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_10"
                android:id="@+id/rv_course"/>
            <TextView
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="一对一课程"
                android:textSize="@dimen/dp_20"
                app:layout_constraintTop_toTopOf="parent"
                android:src="@mipmap/jifeng"/>
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_10"
                android:id="@+id/rv_one"/>
        </LinearLayout>



    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>