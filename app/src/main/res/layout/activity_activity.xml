<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EFE6CC"
    android:padding="@dimen/dp_10"
    tools:context=".bigboss.activity.ActivityActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_activity_txt1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="排名情况"
                android:textColor="#0C0C0C"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_pm"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@drawable/ranking"
                app:layout_constraintTop_toBottomOf="@id/tv_activity_txt1">

                <TextView
                    android:id="@+id/tv_activity_num1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_40"
                    android:layout_marginTop="@dimen/dp_15"
                    android:gravity="center"
                    android:text="3232"
                    android:textColor="#fff"
                    android:textStyle="bold"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_activity_num2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_40"
                    android:layout_marginTop="@dimen/dp_15"
                    android:gravity="center"
                    android:text="8"
                    android:textColor="#fff"
                    android:textStyle="bold"
                    app:layout_constraintLeft_toRightOf="@id/tv_activity_num1"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_activity_city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_40"
                    android:layout_marginTop="@dimen/dp_15"
                    android:gravity="center"
                    android:text="北京市"
                    android:textColor="#fff"
                    android:textStyle="bold"
                    app:layout_constraintLeft_toRightOf="@id/tv_activity_num2"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_activity_txt2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_35"
                    android:layout_marginTop="@dimen/dp_5"
                    android:gravity="center"
                    android:text="喜欢数"
                    android:textColor="#fff"
                    android:textStyle="bold"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_activity_num1" />

                <TextView
                    android:id="@+id/tv_activity_txt3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_30"
                    android:layout_marginTop="@dimen/dp_5"
                    android:gravity="center"
                    android:text="排名"
                    android:textColor="#fff"
                    android:textStyle="bold"
                    app:layout_constraintLeft_toRightOf="@id/tv_activity_txt2"
                    app:layout_constraintTop_toBottomOf="@id/tv_activity_num2" />

                <TextView
                    android:id="@+id/tv_activity_txt4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_35"
                    android:layout_marginTop="@dimen/dp_5"
                    android:gravity="center"
                    android:text="城市"
                    android:textColor="#fff"
                    android:textStyle="bold"
                    app:layout_constraintLeft_toRightOf="@id/tv_activity_txt3"
                    app:layout_constraintTop_toBottomOf="@id/tv_activity_city" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/tv_activity_txt5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:text="选手信息"
                android:textColor="#0C0C0C"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/iv_activity_wll"
                    android:layout_width="@dimen/dp_150"
                    android:layout_height="@dimen/dp_150"
                    android:layout_marginTop="@dimen/dp_10"
                    android:src="@drawable/wll" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/dp_8">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="王乐乐"
                        android:textColor="#0B0A0A"
                        android:textSize="@dimen/dp_20"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_5"
                        android:text="性别：男" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_5"
                        android:text="年龄：11岁" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_5"
                        android:text="参赛类型：小提琴演奏" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_5"
                        android:text="指导学校：音符音乐学校" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_5"
                        android:text="指导教师：王桂丽" />

                </LinearLayout>
            </LinearLayout>



            <TextView
                android:id="@+id/tv_activity_txt6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:text="选手作品"
                android:textColor="#0C0C0C"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/iv_activity_wll" />

            <ImageView
                android:id="@+id/tv_image_xs"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_170"
                android:layout_marginTop="@dimen/dp_10"
                android:scaleType="center"
                android:src="@drawable/video"
                app:layout_constraintTop_toBottomOf="@id/tv_activity_txt6" />

            <LinearLayout
                android:id="@+id/ll_activity_txt1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_5"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@id/tv_image_xs">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="作品说明：" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="《XXX进行曲》 xxxxxxxxxxxxx" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="作品编号：" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="123456789" />

            </LinearLayout>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@drawable/shape1"
                android:text="投票"
                android:textColor="#fff"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ll_activity_txt1" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>