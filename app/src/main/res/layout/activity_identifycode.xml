<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#fff"
    android:layout_height="match_parent"
    android:padding="@dimen/dp_10"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/ll"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_10">
    <LinearLayout
        android:layout_marginTop="@dimen/dp_20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/yzlogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dp_25"
            android:text="验证码登录"
            android:textColor="#111"/>

        <View
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_width="2dp"
            android:layout_height="@dimen/dp_30"
            android:background="#E6E4E4"/>
        <TextView
            android:id="@+id/mm_login"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dp_25"
            android:text="密码登录"
            android:textColor="#9F9B9B"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_yanz"
        android:visibility="visible"
        android:layout_marginTop="@dimen/dp_10"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_gravity="center_vertical"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:src="@mipmap/deng"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:text="未注册手机号码将直接注册"
                android:textSize="@dimen/dp_15"
                android:gravity="center_vertical"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="@dimen/dp_50"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:src="@mipmap/loginphone"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_30"
                android:text="+86"
                android:textSize="@dimen/dp_15"
                android:textColor="#111"/>
            <View
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_width="2dp"
                android:layout_height="@dimen/dp_20"
                android:background="#E6E4E4"/>
            <EditText
                android:maxLines="1"
                android:textSize="@dimen/dp_20"
                android:background="@null"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="188 1234 1234"/>
        </LinearLayout>
        <View
            android:layout_marginTop="@dimen/dp_20"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_2"
            android:background="#E6E4E4"/>
        <LinearLayout
            android:layout_marginTop="@dimen/dp_20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:src="@mipmap/suo"/>
            <EditText
                android:textSize="@dimen/dp_20"
                android:background="@null"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1234"/>
            <TextView
                android:layout_marginRight="@dimen/dp_10"
                android:textSize="@dimen/dp_15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="获取验证码"
                android:gravity="right"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_mm"
        android:visibility="gone"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_marginTop="@dimen/dp_50"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:src="@mipmap/loginphone"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_30"
            android:text="+86"
            android:textSize="@dimen/dp_15"
            android:textColor="#111"/>
        <View
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_width="2dp"
            android:layout_height="@dimen/dp_20"
            android:background="#E6E4E4"/>
        <EditText
            android:textSize="@dimen/dp_20"
            android:background="@null"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="输入手机号"/>
    </LinearLayout>
        <View
            android:layout_marginTop="@dimen/dp_20"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_2"
            android:background="#E6E4E4"/>
    <LinearLayout
        android:layout_marginTop="@dimen/dp_20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:src="@mipmap/suo2"/>
        <EditText
            android:password="true"
            android:textSize="@dimen/dp_20"
            android:background="@null"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="请输入密码"/>
    </LinearLayout>
        </LinearLayout>
    <View
        android:layout_marginTop="@dimen/dp_20"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_2"
        android:background="#E6E4E4"/>



    </LinearLayout>
    <Button
        android:layout_marginBottom="@dimen/dp_10"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/llk"
        android:layout_marginTop="@dimen/dp_50"
        android:layout_width="@dimen/dp_200"
        android:layout_height="@dimen/dp_40"
        android:text="登录"
        android:textSize="@dimen/dp_14"
        android:textColor="#fff"
        android:background="@drawable/shape_identify"
        android:layout_gravity="center_horizontal"/>
    <LinearLayout
        android:id="@+id/llk"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/dp_40"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/xieyi"
            android:text="11"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>