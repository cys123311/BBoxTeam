<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_margin="@dimen/dp_5"
    android:layout_height="wrap_content">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/coupon_back">

        <RelativeLayout
            android:id="@+id/mColor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorOrange"
            android:paddingHorizontal="@dimen/dp_10"
            android:paddingVertical="@dimen/dp_10">

            <TextView
                android:id="@+id/tv_coupon_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="新用户满减抵扣红包"
                android:textColor="@color/white"
                android:textSize="@dimen/dp_18" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_coupon_title"
                android:orientation="horizontal"
                android:paddingHorizontal="@dimen/dp_5"
                android:paddingVertical="@dimen/dp_15">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textSize="@dimen/sp_40"
                            android:text="50"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:text="元"
                            android:layout_marginLeft="@dimen/dp_5"
                            android:textColor="@color/white"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <TextView
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/dp_20"
                        android:text="满2千立减"/>

                </LinearLayout>

                <View
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_marginBottom="@dimen/dp_5"
                    android:background="@color/white"
                    android:layout_width="@dimen/dp_2"
                    android:layout_height="match_parent" />

                <LinearLayout
                    android:layout_gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <TextView
                        android:paddingHorizontal="@dimen/dp_20"
                        android:textSize="@dimen/dp_18"
                        android:text="新用户专用，满2千减50元仅限小程序内使用"
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

        <TextView
            android:text="两天后到期"
            android:layout_gravity="right"
            android:gravity="right|center_vertical"
            android:paddingHorizontal="@dimen/dp_10"
            android:textSize="@dimen/sp_10"
            android:background="@mipmap/ic_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </FrameLayout>
    <View
        android:background="@color/teal_700"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/sp_2"
        android:layout_marginRight="@dimen/sp_2"
        android:layout_height="@dimen/sp_4"/>
    <com.example.boxteam.custom.QuanView
        android:paddingVertical="@dimen/dp_15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:text="有效期至2021-12-12"
                android:paddingVertical="@dimen/dp_10"
                android:paddingHorizontal="@dimen/dp_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginRight="@dimen/dp_10"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:text="立即使用"
                android:textColor="@color/colorOrange"
                android:paddingVertical="@dimen/dp_5"
                android:paddingHorizontal="@dimen/dp_10"
                android:background="@drawable/use_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
    </com.example.boxteam.custom.QuanView>
</LinearLayout>